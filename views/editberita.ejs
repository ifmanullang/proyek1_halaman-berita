<%- include('templates/header')-%>
<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css" />
  </head>

  <body>
    <div class="p-3 mb-2 bg-warning text-dark">(IFM)
    <div class="container">
      <h1>Edit Berita</h1>
      <br />

      <div class="p-5 mb-4 bg-light rounded-3">
        <form method="POST" action="/editberita/<%=berita.id %>" class="mt-4" enctype="multipart/form-data">
          <div class="mb-3">
            <label for="judul" class="form-label">Judul Berita</label>
            <input type="text" name="judul" class="form-control" id="judul" value="<%=berita.judul %>" />
          </div>
          <div class="mb-3">
            <label for="deskripsi" class="form-label">Deskripsi Singkat Berita</label>
            <textarea name="deskripsi" class="form-control" id="deskripsi"><%=berita.deskripsi %></textarea>
          </div>
          <div class="mb-3">
            <label for="isi" class="form-label">Isi Berita</label>
            <textarea name="isi" class="form-control" id="isi"><%=berita.isi %></textarea>
          </div>
          <div class="mb-3">
            <label for="gambar" class="form-label">Gambar</label>
            <input type="file" accept="image/png, image/jpeg, image/jpg" class="form-control" id="gambar" name="gambar" required />
          </div>
          <button type="submit" class="btn bg-success">Kirim</button> &emsp; 
          <a href="/berita" class="btn btn-warning">Kembali</a>
        </form>
      </div>
    </div>
  </div>
  </body>
</html>
<%- include('templates/footer')-%>
